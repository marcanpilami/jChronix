<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>main-package</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>chronix-${project.version}</baseDirectory>

	<fileSets>
		<fileSet>
			<directory>${project.basedir}/..</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/scripts</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.sh</include>
				<include>*.ps1</include>
				<include>*.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/scripts</directory>
			<outputDirectory>/service</outputDirectory>
			<includes>
				<include>*.exe</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/chronix-doc/target/docs</directory>
			<outputDirectory>docs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.parent.basedir}/chronix-gui</directory>
			<outputDirectory>/chronix-gui</outputDirectory>
		</fileSet>
	</fileSets>

	<files>
		<file>
			<source>${project.build.directory}/${project.name}-${project.version}.jar</source>
			<outputDirectory>/lib</outputDirectory>
			<destName>${project.name}.jar</destName>
		</file>
		<file>
			<source>${project.basedir}/src/main/resources/scheduler.properties</source>
			<outputDirectory>/conf</outputDirectory>
			<destName>scheduler.properties.example</destName>
		</file>
	</files>

	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>