<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>main-package</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>chronix-${project.version}</baseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/..</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>*.ps1</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts/procrun</directory>
            <outputDirectory>bin/procrun</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/chronix-doc/target/docs</directory>
            <outputDirectory>docs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/chronix-web/target/chronix-web-${project.version}</directory>
            <outputDirectory>www</outputDirectory>
            <excludes>
                <exclude>**/WEB-INF/lib/**</exclude>
                <exclude>**/META-INF/context.xml</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>${project.build.directory}/${project.name}-${project.version}.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>${project.name}.jar</destName>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/scheduler.properties</source>
            <outputDirectory>conf</outputDirectory>
            <destName>scheduler.properties.sample</destName>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/scheduler.properties</source>
            <outputDirectory>conf</outputDirectory>
            <destName>scheduler.properties</destName>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>